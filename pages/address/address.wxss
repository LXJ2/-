page,
.page-wrap {
    height: 100%;
}

.page-wrap {
    display: flex;
    flex-direction: column;
}

.page-header,
.page-bottom {
    flex-shrink: 0;
}


/* page-header */


/* page-body */

.page-body {
    flex-grow: 1;
    overflow-y: scroll;
}

.address-list .list__item {
    border: 1rpx solid #eee;
}


/* 固定SwipeCell里每一项 的高度  */

.address-list .list__item .left,
.address-list .list__item .right,
.address-list .list__item .content {
    height: 200rpx;
}


/* left */

.address-list .list__item .left {
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #ffa631;
    color: white;
    padding: 0 30rpx;
    box-sizing: border-box;
}


/* right */

.address-list .list__item .right {
    display: flex;
    width: 100rpx;
}


/* content */

.address-list .list__item .content {
    position: relative;
    box-sizing: border-box;
    padding: 20rpx 30rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
}

.address-list .list__item .content .default__image {
    width: 60rpx;
    position: absolute;
    bottom: 0;
    right: 0;
}

.address-list .list__item .content .content__bottom {
    margin-top: 10rpx;
    color: #666;
    font-size: 28rpx;
}

.address-list .list__item .content .content__top {
    display: flex;
    align-items: center;
    justify-content: space-between;
    font-size: 30rpx;
    columns: #333;
}

.address-list .list__item .right .remove {
    background-color: #ff2d51;
}

.address-list .list__item .right .update {
    background-color: #2add9c;
}

.address-list .list__item .right view {
    box-sizing: border-box;
    color: white;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 0 30rpx;
}


/* page-bottom */

.page-bottom {
    display: flex;
    justify-content: center;
    padding: 15rpx 0;
}

.addAdress {
    width: 90%;
}