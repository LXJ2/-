page,
.page-wrap {
  height: 100%;
  position: relative;
}

.page-wrap {
  display: flex;
  flex-direction: column;
}

.bjImg {
  position: absolute;
  z-index: -1;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: #eee;
}

.bjImg image {
  width: 100%;
}

/* page-head */
.page-head,
.page-bottom {
  flex-shrink: 0;
}

.page-head {
  display: flex;
  justify-content: center;
  padding: 50rpx 0;
}

.page-head .head__title {
  font-size: 40rpx;
  color: white;
  font-weight: bold;
}

/* page-body */
.page-body {
  flex-grow: 1;
  padding: 0 30rpx;
}

.addressList {
  height: 164rpx;
  display: flex;
  background-color: white;
  padding: 0 30rpx;
  border-radius: 18rpx;
  /* -webkit-border-radius: ;
  -moz-border-radius: ;
  -ms-border-radius: ;
  -o-border-radius: ; */
}

.hasAdress {
  flex-grow: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;

}

.noAddress {
  flex-grow: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  font-size: 36rpx;
  color: #000;
}

.hasAdress .top {
  font-size: 32rpx;
  color: #333;
  display: flex;
  margin-bottom: 10rpx;
}

.hasAdress .top .name {
  margin-right: 20rpx;
}

.hasAdress .bottom {
  font-size: 26rpx;
  color: #333;
}

.hasMore {
  display: flex;
  align-items: center;
  justify-content: center;
  flex-grow: 0;
}

/* productList */
.productList {
  background-color: white;
  margin-top: 45rpx;
  border-radius: 18rpx;
  -webkit-border-radius: 18rpx;
  -moz-border-radius: 18rpx;
  -ms-border-radius: 18rpx;
  -o-border-radius: 18rpx;
}

.productList .p__item {
  height: 172rpx;
  padding: 20rpx;
  display: flex;
  border-bottom: 1rpx solid #eee;
}

.productList .p__item .left__image {
  flex-shrink: 0;
  width: 172rpx;
  background-color: #eee;
}

.productList .p__item .right {
  flex-grow: 1;
  margin-left: 10rpx;
}

.productList .p__item .right .brief {
  font-size: 28rpx;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}

.productList .p__item .right .price-count {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 15rpx;
}

.productList .p__item .right .price-count .price__left {
  display: flex;
  align-items: flex-end;
  color: #BF1111;
}

.productList .p__item .right .price-count .price__right {
  font-size: 24rpx;
  color: #333;
}

.productList .p__item .right .price-count .price__left .symbol {
  font-size: 24rpx;
}

.productList .p__item .right .price-count .price__left .price {
  font-size: 28rpx;
}

.productList .p__item .right .right__tip {
  color: #BF1111;
  font-size: 20rpx;
  margin-top: 13rpx;
}

