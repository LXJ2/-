/* page-header */
.header__search {
  /* height: 200rpx; */
  display: flex;
  align-items: center;
  background-color: #845d32;
}

.header__search .search__img {
  width: 60rpx;
  flex-shrink: 0;
  margin-left: 30rpx;
}

.header__search .search-wrap {
  flex-grow: 1;
}

.header__swiper image {
  width: 100%;
  height: 100%;
}

.navCom {
  padding: 10px;
  background: #fff;
}

.navCom .nav {
  display: inline-block;
  width: 20%;
  text-align: center;
}

.navCom image {
  width: 50px;
  margin: auto;
  display: block;
}

.navCom text {
  font-size: 12px;
  margin-top: 5px;
}

/* 商品列表样式 */
.listBox {
  background: #f4f4f4;
  padding-top: 20px;
}
.productListBox {
  margin-bottom: 9px;
  width: calc((100% - 33px) / 2);
  height: 258px;
  display: inline-block;
  background: #fff;
  vertical-align: top;
  border-radius: 6px;
}
.productListBox:nth-child(2n+1) {
      margin-left: 12px;
      margin-right: 4.5px;
  }
.productListBox:nth-child(2n) {
      margin-left: 4.5px;
      margin-right: 12px;
  }
  .listBox .imgBox {
      position: relative;
  }
  .imgBox image {
          width: 100%;
      }
  .imgBox text {
          position: absolute;
          z-index: 1;
          left: 0;
          bottom: 0;
          height: 16px;
          text-align: center;
          line-height: 16px;
          background-color: rgb(217, 107, 108);
          padding-left: 4px;
          padding-right: 4px;
          margin-right: 5px;
          color: #fff;
          font-size: 11px;
          border-radius: 1.5px;
      }
  
      .imgBox .name {
      font-size: 15px;
      width: 171px;
      color: rgb(51, 51, 51);
      line-height: 21px;
      text-overflow: ellipsis;
      padding-left: 3px;
      padding-right: 3px;
      margin-top: 6px;
      overflow: hidden;
  }
  .des {
      font-size: 13px;
      width: 171px;
      color: rgb(153, 153, 153);
      padding-left: 3px;
      padding-right: 3px;
      margin-top: 2px;
      text-overflow: ellipsis;
      line-height: 18px;
      -webkit-box-pack: center;
      overflow: hidden;
  }
  .price {
      color: red;
  }
  .oldPrice {
      margin-left: 4px;
      font-size: 14px;
      color: rgb(153, 153, 153);
      text-decoration: line-through;
      margin-bottom: 0.5px;
      height: 20px;
  }

.bottom-text {
  padding: 120px 0 80px;
  text-align: center;
  font-size: 20px;
}