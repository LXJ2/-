/* pages/cart/cart.wxss */
page,
.page-wrap {
    height: 100%;
}


/* page-wrap */

.page-wrap {
    display: flex;
    flex-direction: column;
}


/* page-top */

.page-top {
    position: relative;
    flex-grow: 1;
    overflow-y: scroll;
    display: flex;
    flex-direction: column;
}

.page-top .bgImg {
    width: 100%;
    position: absolute;
    z-index: -1;
}


/* page-header */

.page-header {
    display: flex;
    align-items: center;
    color: white;
    flex-shrink: 0;
}

.page-header .icon__wrap {
    width: 120rpx;
    display: flex;
    align-items: center;
    justify-content: center;
}

.page-header .header__title {
    text-align: center;
    flex-grow: 1;
    padding-left: 120rpx;
    font-size: 38rpx;
    padding: 50rpx 0;
}

.page-header .header__editor {
    flex-shrink: 0;
    width: 120rpx;
    text-align: left;
}


/* page-body */

.page-body {
    flex-grow: 1;
    padding: 0 20rpx;
    background-color: #eee;
}

.page-body .empty-cart {
    padding: 130rpx 0;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}

.page-body .empty-cart image {
    width: 180rpx;
}

.page-body .empty-cart .empty__text,
.page-body .empty-cart .empty__buy {
    font-size: 26rpx;
    color: #666;
    margin-top: 15rpx;
}

.page-body .empty-cart .empty__buy {
    padding: 13rpx 28rpx;
    border: 1rpx solid #ddd;
    border-radius: 15rpx;
    -webkit-border-radius: 15rpx;
    -moz-border-radius: 15rpx;
    -ms-border-radius: 15rpx;
    -o-border-radius: 15rpx;
}


/* cart-wrap */
.name {
    font-size: 15px;
    width: 171px;
    color: rgb(51, 51, 51);
    line-height: 21px;
    text-overflow: ellipsis;
    padding-left: 3px;
    padding-right: 3px;
    margin-top: 6px;
    overflow: hidden;
}
.des {
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    font-size: 24rpx;
    text-indent: 1.5em;
    width: 171px;
    color: rgb(153, 153, 153);
    /* padding-left: 3px;
    padding-right: 3px;
    margin-top: 2px; */
   /*  line-height: 18px;
    -webkit-box-pack: center;
    overflow: hidden; */
}
.price {
    color: red;
}
.oldPrice {
    /* margin-left: 4px; */
    font-size: 24rpx;
    color: rgb(153, 153, 153);
    text-decoration: line-through;
    /* margin-bottom: 0.5px;
    height: 20px; */
}
.cart-wrap {
    background-color: white;
    border-radius: 40rpx;
    overflow: hidden;
}

.cart__title {
    border-bottom: 2rpx solid #ccc;
}

.cart__title,
.cart__item {
    padding: 20rpx 30rpx;
}

.cart__title .left,
.cart__title .right {
    display: flex;
    align-items: center;
}

.cart__title .left {
    font-size: 30rpx;
}

.cart__title .left .icon {
    margin-right: 15rpx
}

.cart__title .right .icon {
    margin-right: 15rpx
}

.cart__title .right {
    font-size: 25rpx;
    color: #666;
}

.cart__title {
    display: flex;
    align-items: center;
    justify-content: space-between;
}


/* cart-list */

.cart-list .cart__item {
    display: flex;
}

.cart-list .cart__item .icon,
.cart-list .cart__item .image {
    display: flex;
    align-items: center;
    justify-content: flex-start;
}

.cart-list .cart__item .icon {
    padding: 0 10rpx 0 0;
    flex-shrink: 0;
}

.cart-list .cart__item .image {
    flex-shrink: 0;
}

.cart-list .cart__item .image image {
    width: 172rpx;
    background-color: #eee;
    border-radius: 8rpx;
}

.cart-list .cart__item .dcre-wrap {
    flex-grow: 1;
    margin-left: 15rpx;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}

.cart-list .cart__item .dcre-wrap .top {
    /* 超出2行省略 */
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    font-size: 28rpx;
    color: #333;
    text-indent: 1.5em;
}

.cart-list .cart__item .dcre-wrap .bottom {
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.cart-list .cart__item .dcre-wrap .bottom .left {
    color: #BF1111;
    font-size: 20rpx;
    display: flex;
    align-items: flex-end;
}

.cart-list .cart__item .dcre-wrap .bottom .left___price {
    font-size: 30rpx;
}


/* page-bottom */

.page-bottom {
    flex-shrink: 0;
}

.page-bottom .settle-wrap {
    display: flex;
    padding: 20rpx 13rpx;
    align-items: center;
    justify-content: space-between;
}

.settle-wrap__left {
    flex-shrink: 0;
    display: flex;
    align-items: center;
}

.settle-wrap__left .text-all {
    color: #666666;
    font-size: 30rpx;
    padding: 0 5rpx;
}

.settle-wrap__middle {
    align-self: stretch;
    flex-grow: 1;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    align-items: flex-end;
}

.settle-wrap__middle .top {
    display: flex;
    align-items: flex-end;
}

.settle-wrap__middle .top .top__titel {
    color: #222;
    font-size: 28rpx;
}

.settle-wrap__middle .top .price {
    font-size: 32rpx;
    color: #BF1111;
}

.settle-wrap__middle .bottom {
    font-size: 22rpx;
    color: #BF1111;
}

.settle-wrap__right {
    flex-shrink: 0;
    margin: 0 10rpx;
    width: 192rpx;
    height: 76rpx;
    border-radius: 40rpx;
    line-height: 76rpx;
    text-align: center;
    background-image: linear-gradient(to right, rgb(240, 78, 46), rgb(213, 16, 16));
    color: white;
}