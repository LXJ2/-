 .user .userId {
     display: flex;
     align-items: center;
     background-color: #845d32;
     width: 100%;
     height: 80px;
 }

 .user .userId .userI {
     width: 40px;
     height: 40px;
 }

 .login {
     display: flex;
     background-color: #BDBDBD;
     border-radius: 5rpx;
     font-size: 30rpx;
 }



 .userInfo .info {
     display: flex;
     width: 100%;
     height: 40px;
     align-items: center;
     padding: 10px;
     font-size: 15px;
     border-bottom: 1px solid grey;
 }

 .icon {
     height: 30px;
     width: 25px;
     margin: 5px;
 }

 .arrow {
     margin: 12px 5px 5px 180px;
     height: 20px;
     width: 20px;
     float: right;
 }