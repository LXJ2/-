.productListBox {
    display: inline-block;
    background: #fff;
    vertical-align: top;
  }
    .listBox .imgBox {
        position: relative;
    }
    .imgBox text {
            position: absolute;
            z-index: 1;
            left: 0;
            bottom: 0;
            height: 16px;
            text-align: center;
            line-height: 16px;
            background-color: rgb(217, 107, 108);
            padding-left: 4px;
            padding-right: 4px;
            margin-right: 5px;
            color: #fff;
            font-size: 11px;
            border-radius: 1.5px;
        }
    
        .imgBox .name {
        font-size: 15px;
        width: 171px;
        color: rgb(51, 51, 51);
        line-height: 21px;
        text-overflow: ellipsis;
        padding-left: 3px;
        padding-right: 3px;
        margin-top: 6px;
        overflow: hidden;
    }
    .des {
        font-size: 13px;
        width: 171px;
        color: rgb(153, 153, 153);
        padding-left: 3px;
        padding-right: 3px;
        margin-top: 2px;
        text-overflow: ellipsis;
        line-height: 18px;
        -webkit-box-pack: center;
        overflow: hidden;
    }
    .price {
        color: red;
    }
    .oldPrice {
        margin-left: 4px;
        font-size: 14px;
        color: rgb(153, 153, 153);
        text-decoration: line-through;
        margin-bottom: 0.5px;
        height: 20px;
    }
  
  .bottom-text {
    padding: 120px 0 80px;
    text-align: center;
    font-size: 20px;
  }
  .detail{
      margin-left: 40rpx;
  }